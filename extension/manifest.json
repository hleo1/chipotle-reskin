{
  "manifest_version": 3,
  "name": "Chipotle Steak Picture Replacer",
  "version": "1.0.0",
  "description": "Replaces the steak picture on Chipotle's website with your own image",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chipotle.com/*"],
      "js": [
        "voice-generation/voices.js",
        "voice-generation/prompts.js",
        "voice-generation/playVoice.js",
        "voice-generation/index.js",
        "voice-generation/main.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/replacement-image.png",
        "pictures/**/*.png",
        "hero-section/**/*.png",
        "info-icon.png",
        "voice-generation/voices/**/*.mp3",
        "videos/**/*.mp4"
      ],
      "matches": ["https://www.chipotle.com/*"]
    }
  ]
}

